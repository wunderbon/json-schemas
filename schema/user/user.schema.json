{
  "$id": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/user/user.schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "version": "v0.1.0",
  "contact": {
    "name": "wunderbon Operation GmbH & Co. KG",
    "url": "https://developers.wunderbon.io",
    "email": "open-source@wunderbon.io"
  },
  "title": "User",
  "description": "User representation within the wunderbon domain.",
  "type": "object",
  "properties": {
    "id": {
      "description": "Id of the User.",
      "$ref": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/uuid/uuid.schema.json"
    },
    "audience": {
      "description": "Audience of the User.",
      "type": "string",
      "minLength": 8,
      "maxLength": 8,
      "enum": [
        "Consumer",
        "Merchant",
        "Supplier"
      ],
      "examples": [
        "Consumer",
        "Merchant",
        "Supplier"
      ]
    },
    "salutation": {
      "description": "Salutation of User.",
      "type": "string",
      "minLength": 3,
      "maxLength": 4,
      "enum": [
        "Mr.",
        "Mrs."
      ],
      "examples": [
        "Mr.",
        "Mrs."
      ]
    },
    "firstName": {
      "description": "First name of the User.",
      "type": "string",
      "minLength": 2,
      "maxLength": 255,
      "examples": [
        "Jane",
        "John"
      ]
    },
    "lastName": {
      "description": "Last name of the User.",
      "type": "string",
      "minLength": 2,
      "maxLength": 255,
      "examples": [
        "Doe",
        "Vo"
      ]
    },
    "email": {
      "description": "Email address.",
      "type": "string",
      "pattern": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$",
      "maxLength": 255,
      "examples": [
        "john.doe@example.com",
        "jane@example.com"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "email"
  ]
}
