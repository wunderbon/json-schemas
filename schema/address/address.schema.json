{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/address/address.schema.json",
  "title": "Address",
  "description": "An address in wunderbon domain.",
  "type": "object",
  "properties": {
    "name": {
      "oneOf": [
        {
          "$ref": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/name/private/name.schema.json"
        },
        {
          "$ref": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/name/legal/name.schema.json"
        }
      ]
    },
    "street": {
      "$ref": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/street/street.schema.json"
    },
    "zip": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "city": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "country": {
      "$ref": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/country/country.schema.json"
    },
    "gps": {
      "$ref": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/gps/gps.schema.json"
    },
    "www": {
      "format": "uri"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "street",
    "zip",
    "city",
    "country",
    "gps",
    "www"
  ]
}
