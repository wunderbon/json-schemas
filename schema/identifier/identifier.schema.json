{
  "$id": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/identifier/identifier.schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "version": "v0.2.1",
  "contact": {
    "name": "wunderbon International B.V.",
    "url": "https://wunderbon.io/support",
    "email": "open-source@wunderbon.io"
  },
  "title": "Identifier",
  "description": "Identifier representation within the wunderbon domain. This identifier can be any Card-Id from any of our supported networks.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "network": {
      "type": "integer",
      "minimum": 1,
      "maximum": 999999,
      "default": 1
    },
    "number": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "network",
    "number"
  ]
}
