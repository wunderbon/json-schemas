{
  "$id": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/gtin13/gtin13.schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "version": "v0.4.19",
  "contact": {
    "name": "wunderbon Operation GmbH & Co. KG",
    "url": "https://developers.wunderbon.io",
    "email": "open-source@wunderbon.io"
  },
  "title": "GTIN 13",
  "description": "A GTIN 13 representation within the wunderbon domain.",
  "type": "object",
  "properties": {
    "id": {
      "description": "The GTIN 13 formatted product number.",
      "type": "string",
      "minLength": 13,
      "maxLength": 13,
      "pattern": "\\b(?:\\d{13})\\b",
      "examples": [
        "0720260063170"
      ]
    }
  },
  "required": [
    "id"
  ],
  "additionalProperties": false
}
