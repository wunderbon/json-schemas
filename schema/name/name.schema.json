{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/name/name.schema.json",
  "title": "Name",
  "description": "A schema for name representation of private persons or legal entities in wunderbon domain.",
  "type": "object",
  "oneOf": [
    {
      "properties": {
        "salutation": {
          "type": "string",
          "enum": [
            "Mrs",
            "Mr",
            "Ms"
          ]
        },
        "firstName": {
          "type": "string",
          "minLength": 2,
          "maxLength": 255
        },
        "lastName": {
          "type": "string",
          "minLength": 2,
          "maxLength": 255
        }
      },
      "required": [
        "firstName",
        "lastName"
      ]
    },
    {
      "properties": {
        "name": {
          "type": "string",
          "minLength": 3,
          "maxLength": 255
        }
      },
      "additionalProperties": false
    }
  ]
}


