{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/name/legal/name.schema.json",
  "title": "Legal Entity",
  "description": "A schema for legal entity name representation within the wunderbon domain.",
  "type": "object",
  "properties": {
    "entityName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "displayName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    }
  },
  "additionalProperties": false,
  "required": [
    "entityName"
  ]
}


