{
  "$id": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/name/legal/name.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "0.0.1",
  "contact": {
    "name": "wunderbon support",
    "url": "https://wunderbon.io/support",
    "email": "api-support@wunderbon.io"
  },
  "title": "Legal Entity",
  "description": "A schema for legal entity name representation within the wunderbon domain.",
  "type": "object",
  "properties": {
    "entityName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255,
      "pattern": "^[A-Za-z-\\\\d\\\\ \\.\\&üäö]+$"
    },
    "displayName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "pattern": "^[A-Za-z-\\\\d\\\\ \\.\\&üäö]+$"
    }
  },
  "additionalProperties": false,
  "required": [
    "entityName"
  ]
}


