{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bitbucket.org/wunderbon/json-schemas/raw/master/schema/name/private/name.schema.json",
  "title": "Private Person",
  "description": "A schema for private persons name representation within the wunderbon domain.",
  "type": "object",
  "properties": {
    "salutation": {
      "type": "string",
      "enum": [
        "Mrs",
        "Mr",
        "Ms"
      ]
    },
    "firstName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255,
      "pattern": "^[A-Za-z-\\ ]+$"
    },
    "lastName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255,
      "pattern": "^[A-Za-z-\\ ]+$"
    }
  },
  "required": [
    "firstName",
    "lastName"
  ],
  "additionalProperties": false
}


